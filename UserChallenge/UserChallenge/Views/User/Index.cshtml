@model IEnumerable<UserChallenge.Models.User>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["Mensaje"] is not null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                <span aria-hidden="true">&times;</span>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Usuarios</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="User">Agregar Usuario</a>
            @*<a class="btn btn-danger d-block" asp-action="Delete" asp-controller="User">Eliminar Usuario</a>*@
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.IdUsuario)</td>
                        <td>@Html.DisplayNameFor(m => m.Username)</td>
                        <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Email)</td>
                        <td>@Html.DisplayNameFor(m => m.Telefono)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
            <tbody>
                 @foreach (var user in Model)
                 {
                 <tr>
                    <td>@user.IdUsuario</td>
                    <td>@user.Username</td>
                    <td>@user.Nombre</td>
                    <td>@user.Email</td>
                    <td>@user.Telefono</td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.IdUsuario" class="btn btn-warning">Editar</a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.IdUsuario" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                  }
            </tbody>
            </table>
         }
    </div>
</div>
